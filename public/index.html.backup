    <script>
      document.getElementById('year').textContent = new Date().getFullYear();

      (function () {
        const toggle = document.querySelector('[data-mobile-nav-toggle]');
        const panel = document.getElementById('mobile-nav-panel');
        const backdrop = document.getElementById('mobile-nav-backdrop');
        if (!toggle || !panel || !backdrop) {
          return;
        }

        const openIcon = toggle.querySelector('[data-icon="open"]');
        const closeIcon = toggle.querySelector('[data-icon="close"]');

        const setExpanded = (expanded) => {
          toggle.setAttribute('aria-expanded', String(expanded));
          if (openIcon && closeIcon) {
            openIcon.classList.toggle('hidden', expanded);
            closeIcon.classList.toggle('hidden', !expanded);
          }
        };

        const isOpen = () => toggle.getAttribute('aria-expanded') === 'true';

        const modal = document.getElementById('demo-modal');

        const open = () => {
          if (isOpen()) return;
          panel.classList.remove('hidden');
          backdrop.classList.remove('hidden');
          document.body.classList.add('overflow-hidden');
          setExpanded(true);
        };

        const close = () => {
          if (!isOpen()) return;
          panel.classList.add('hidden');
          backdrop.classList.add('hidden');
          const modalActive = modal && !modal.classList.contains('hidden');
          if (!modalActive) {
            document.body.classList.remove('overflow-hidden');
          }
          setExpanded(false);
        };

        toggle.addEventListener('click', () => {
          if (isOpen()) {
            close();
          } else {
            open();
          }
        });

        backdrop.addEventListener('click', close);

        panel.querySelectorAll('a, button').forEach((el) => {
          el.addEventListener('click', close);
        });

        window.addEventListener('resize', () => {
          if (window.innerWidth >= 900) {
            close();
          }
        });

        document.addEventListener('keydown', (event) => {
          if (event.key === 'Escape') {
            close();
          }
        });
      })();

      (function () {
        const ua = navigator.userAgent || navigator.platform || '';
        let os = 'other';
        if (/Mac|iP(hone|od|ad)/i.test(ua)) {
          os = 'mac';
        } else if (/Win/i.test(ua)) {
          os = 'windows';
        } else if (/Linux/i.test(ua)) {
          os = 'linux';
        }

        if (os === 'other') {
          return;
        }

        document.querySelectorAll('[data-os-icon]').forEach((icon) => {
          icon.classList.toggle('hidden', icon.getAttribute('data-os-icon') !== os);
        });
      })();

      // Pick OS-specific desktop binary from GitHub releases (searches multiple releases)
      (function () {
        const downloadLinks = Array.from(document.querySelectorAll('[data-download]'));
        if (!downloadLinks.length) return;

        const repo = 'the-dev-tools/dev-tools';
        const apiUrl = `https://api.github.com/repos/${repo}/releases?per_page=15`;
        const fallback = `https://github.com/${repo}/releases/latest`;

        // Ensure a sensible default
        downloadLinks.forEach((a) => {
          if (!a.getAttribute('href')) a.setAttribute('href', fallback);
          a.setAttribute('target', '_blank');
          a.setAttribute('rel', 'noopener noreferrer');
        });

        const ua = (navigator.userAgent || navigator.platform || '').toLowerCase();
        let os = 'other';
        if (/mac|iP(hone|od|ad)/i.test(ua)) os = 'mac';
        else if (/win/i.test(ua)) os = 'windows';
        else if (/linux/i.test(ua)) os = 'linux';

        // Rough arch detection (fallback to x64 if unknown)
        let arch = 'x64';
        try {
          if (/arm|aarch64|apple m\d|apple silicon/.test(ua)) arch = 'arm64';
        } catch (_) {}

        // Helper function to find matching asset in a release
        function findAssetInRelease(release, os, arch) {
          const assets = Array.isArray(release.assets) ? release.assets : [];
          if (!assets.length) return null;

          const pick = (patterns) =>
            assets.find((asset) => patterns.some((p) => p.test(asset.name))) || null;

          let asset = null;
          if (os === 'mac') {
            if (arch === 'arm64') {
              asset = pick([/darwin[-_]?arm64.*\.dmg$/i, /arm64.*\.dmg$/i]);
            }
            if (!asset) {
              asset = pick([/darwin[-_]?x64.*\.dmg$/i, /x64.*\.dmg$/i, /\.dmg$/i]);
            }
          } else if (os === 'windows') {
            asset = pick([/win32[-_]?x64.*\.exe$/i, /win.*\.exe$/i, /\.exe$/i, /\.msi$/i]);
          } else if (os === 'linux') {
            asset = pick([/linux[-_]?x86_64.*AppImage$/i, /\.AppImage$/i, /\.deb$/i, /\.rpm$/i, /linux/i, /\.tar\.gz$/i]);
          }

          return asset;
        }

        fetch(apiUrl)
          .then((r) => (r.ok ? r.json() : Promise.reject(new Error('Release fetch failed'))))
          .then((releases) => {
            // Filter to only desktop releases (tagged with desktop@)
            const desktopReleases = releases.filter(release =>
              release.tag_name && release.tag_name.startsWith('desktop@')
            );

            // Search through releases (newest first) to find matching binary
            let matchedAsset = null;
            for (const release of desktopReleases) {
              matchedAsset = findAssetInRelease(release, os, arch);
              if (matchedAsset) {
                break; // Found a match, stop searching
              }
            }

            // If no pattern match but desktop releases exist, fallback to first asset
            if (!matchedAsset && desktopReleases.length > 0) {
              const latestRelease = desktopReleases[0];
              const assets = latestRelease.assets || [];
              if (assets.length > 0) {
                matchedAsset = assets[0];
              }
            }

            // Update download links if match found
            if (matchedAsset && matchedAsset.browser_download_url) {
              downloadLinks.forEach((a) => a.setAttribute('href', matchedAsset.browser_download_url));
            }
          })
          .catch(() => {
            // leave fallback
          });
      })();

      // Update GitHub stars and releases count dynamically
      (function () {
        const statEls = Array.from(document.querySelectorAll('[data-gh-stats]'));
        if (!statEls.length) return;

        const repo = 'the-dev-tools/dev-tools';
        const repoUrl = `https://api.github.com/repos/${repo}`;
        const releasesUrl = `https://api.github.com/repos/${repo}/releases?per_page=100`;

        const fmtStars = (n) => {
          if (typeof n !== 'number' || !isFinite(n)) return null;
          if (n < 1000) return `${n}`;
          const k = n / 1000;
          const digits = n >= 100000 ? 0 : 1;
          return `${k.toFixed(digits)}k`;
        };

        Promise.all([
          fetch(repoUrl).then((r) => (r.ok ? r.json() : null)).catch(() => null),
          fetch(releasesUrl).then((r) => (r.ok ? r.json() : null)).catch(() => null)
        ]).then(([repoData, releases]) => {
          const stars = repoData && typeof repoData.stargazers_count === 'number' ? repoData.stargazers_count : null;
          const starsTxt = fmtStars(stars);
          const rels = Array.isArray(releases) ? releases.length : null;
          const relsTxt = typeof rels === 'number' ? `${rels}` : null;

          if (starsTxt || relsTxt) {
            statEls.forEach((el) => {
              const existing = el.textContent || '';
              const [prevStars, prevReleases] = existing.split('•').map((s) => s.trim());
              const newStarsPart = starsTxt ? `${starsTxt}★` : prevStars || '';
              const newReleasesPart = relsTxt ? `${relsTxt} releases` : (prevReleases || 'releases');
              el.textContent = `${newStarsPart} • ${newReleasesPart}`.trim();
            });
          }
        });
      })();

      (function () {
        const modal = document.getElementById('demo-modal');
        const iframe = document.getElementById('demo-video');
        if (!modal || !iframe) return;

        const openModal = () => {
          if (modal.classList.contains('hidden')) {
            modal.classList.remove('hidden');
            iframe.src = iframe.dataset.src || '';
            document.body.classList.add('overflow-hidden');
          }
        };

        const closeModal = () => {
          if (!modal.classList.contains('hidden')) {
            modal.classList.add('hidden');
            iframe.src = '';
            document.body.classList.remove('overflow-hidden');
          }
        };

        document.querySelectorAll('[data-demo-trigger]').forEach((btn) => {
          btn.addEventListener('click', openModal);
        });

        modal.querySelectorAll('[data-demo-close]').forEach((btn) => {
          btn.addEventListener('click', closeModal);
        });

        modal.addEventListener('click', (event) => {
          if (event.target === modal) {
            closeModal();
          }
        });

        document.addEventListener('keydown', (event) => {
          if (event.key === 'Escape') {
            closeModal();
          }
        });
      })();

      // Artifact Tabs: simple toggle + copy
      (function () {
        const container = document.querySelector('.tab-panel')?.parentElement?.parentElement;
        // Fallback: scan for any tabs on page
        const tabSets = Array.from(document.querySelectorAll('.tab-panel')).reduce((set, el) => {
          const box = el.closest('.rounded-xl');
          if (box) set.add(box);
          return set;
        }, new Set());
        tabSets.forEach((box) => {
          const tabs = box.querySelectorAll('button.tab-btn');
          const panels = box.querySelectorAll('.tab-panel');
          const copyBtn = box.querySelector('[data-copy]');

          function activate(name) {
            panels.forEach((p) => {
              const active = p.getAttribute('data-panel') === name;
              p.classList.toggle('hidden', !active);
            });
            tabs.forEach((t) => {
              const active = t.getAttribute('data-tab') === name;
              t.setAttribute('data-active', active ? 'true' : 'false');
              t.classList.toggle('bg-slate-900/40', active);
              t.classList.toggle('text-white', active);
            });
          }

          tabs.forEach((t) => t.addEventListener('click', () => activate(t.getAttribute('data-tab'))));
          // default to first tab
          const first = tabs[0];
          if (first) activate(first.getAttribute('data-tab'));

          if (copyBtn) {
            copyBtn.addEventListener('click', async () => {
              const visible = Array.from(panels).find((p) => !p.classList.contains('hidden'));
              if (!visible) return;
              const code = visible.querySelector('code');
              const text = code ? code.textContent : '';
              try {
                await navigator.clipboard.writeText(text);
                copyBtn.textContent = 'Copied';
                setTimeout(() => (copyBtn.textContent = 'Copy'), 1200);
              } catch (_) {
                // noop
              }
            });
          }
        });
      })();
    </script>
